# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
tab_width = 2
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore

[*.txt]
indent_style = tab
indent_size = 4

[*.{diff,md}]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_style = tab
indent_size = 8
